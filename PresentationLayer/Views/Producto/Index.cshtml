@{
    ViewData["Title"] = "Lista de productos";
}

@model List<DataAccess.Producto>

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Crear nuevo producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Opciones del administrador</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto.Id" class="btn btn-danger">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>